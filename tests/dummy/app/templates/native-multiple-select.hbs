<p>
  Demonstration of a native multiple select box with groups.
</p>

<p>
  <a
    href="https://github.com/zestia/ember-select-box/blob/master/tests/dummy/app/templates/native-multiple-select.hbs"
  >
    hbs
  </a>
</p>

<NativeSelectBox
  size="12"
  @multiple={{true}}
  @value={{this.selectedDesserts}}
  @onSelect={{this.selectDesserts}}
  as |sb|
>
  <optgroup label="Pastries">
    {{#each this.selectablePastries as |pastry|}}
      <sb.Option @value={{pastry}}>
        {{pastry.name}}
      </sb.Option>
    {{/each}}
  </optgroup>
  <optgroup label="Biscuits">
    {{#each this.selectableBiscuits as |biscuit|}}
      <sb.Option @value={{biscuit}}>
        {{biscuit.name}}
      </sb.Option>
    {{/each}}
  </optgroup>
</NativeSelectBox>

<p>
  Selected desserts:
</p>

<ul>
  {{#each this.selectedDesserts as |dessert|}}
    <li>
      {{dessert.name}}
    </li>
  {{/each}}
</ul>