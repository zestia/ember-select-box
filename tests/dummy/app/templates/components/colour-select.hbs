{{! template-lint-disable no-inline-styles }}

<SelectBox
  class="colour-select"
  @value={{@value}}
  @onSelect={{@onSelect}}
  @onFocusLeave={{this.close}}
  @onPressEscape={{this.close}}
  @onPressLeft={{this.handlePressLeft}}
  @onPressRight={{this.handlePressRight}}
  ...attributes as |sb|
>
  <sb.SelectedOption
    role="button"
    style={{style (concat "background:" sb.value)}}
    {{on "click" sb.toggle}}
  />

  {{#if sb.isOpen}}
    <sb.Options>
      {{~#each this.colours as |colour|~}}
        <sb.Option
          @value={{colour}}
          style={{style (concat "background:" colour)}}
        />
      {{~/each~}}
    </sb.Options>
  {{/if}}
</SelectBox>