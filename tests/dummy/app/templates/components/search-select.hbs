<SelectBox
  class="search-select"
  @value={{@value}}
  @searchSlowTime={{500}}
  @onSelect={{@onSelect}}
  @onSearch={{@onSearch}}
  @onSearched={{this.handleSearched}}
  @onPressEscape={{this.close}}
  @onFocusLeave={{this.close}}
  ...attributes
  as |sb|
>
  <sb.Input />
  {{#if sb.isSearching}}
    <sb.Option>
      Please wait...
      {{if sb.isSlowSearch "(hold tight!)"}}
    </sb.Option>
  {{else if sb.isOpen}}
    <sb.Options>
      {{yield sb this.results this.lastQuery}}
    </sb.Options>
  {{/if}}
</SelectBox>