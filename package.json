{
  "name": "@zestia/ember-select-box",
  "version": "12.2.1",
  "description": "A faux select box for Ember apps",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "lint": "npm run lint:js && npm run lint:hbs && npm run lint:css",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "prettier": "prettier '**/*.{js,json,css,scss,html,hbs,md}' --write",
    "start": "ember serve",
    "test": "ember test && npm run lint",
    "test:all": "ember try:each",
    "release": "release-it",
    "deploy": "ember build --environment production && ember github-pages:commit --message \"Deploy gh-pages from commit $(git rev-parse HEAD)\" && git push origin gh-pages:gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zestia/ember-select-box.git"
  },
  "engines": {
    "node": "8.* || >= 10.*"
  },
  "author": "Zestia",
  "license": "MIT",
  "devDependencies": {
    "@ember/optional-features": "^1.1.0",
    "@zestia/ember-template-lint-plugin": "^2.0.7",
    "@zestia/eslint-config": "^2.0.32",
    "@zestia/prettier-config": "^1.0.0",
    "@zestia/stylelint-config": "^2.0.30",
    "broccoli-asset-rev": "^3.0.0",
    "ember-cli": "~3.14.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-github-pages": "^0.2.2",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-test-loader": "^2.2.0",
    "ember-cli-uglify": "^3.0.0",
    "ember-data": "~3.14.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-load-initializers": "^2.1.1",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^6.0.0",
    "ember-source": "^3.14.3",
    "ember-source-channel-url": "^2.0.1",
    "ember-template-lint": "^1.9.0",
    "ember-try": "^1.3.0",
    "eslint": "^6.7.2",
    "loader.js": "^4.7.0",
    "prettier": "^1.19.1",
    "qunit-dom": "^0.9.2",
    "release-it": "^12.4.3",
    "sass": "^1.23.7",
    "stylelint": "^12.0.0"
  },
  "dependencies": {
    "@ember/render-modifiers": "^1.0.2",
    "ember-angle-bracket-invocation-polyfill": "^2.0.2",
    "ember-cli-babel": "^7.13.0",
    "ember-cli-htmlbars": "^4.0.9",
    "ember-merge-helper": "^0.1.1",
    "ember-named-arguments-polyfill": "^1.0.0"
  },
  "keywords": [
    "ember-addon",
    "select",
    "select-box",
    "dropdown"
  ],
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://zestia.github.io/ember-select-box",
    "versionCompatibility": {
      "ember": ">=3.8 <=canary"
    }
  },
  "bugs": {
    "url": "https://github.com/zestia/ember-select-box/issues"
  },
  "homepage": "https://github.com/zestia/ember-select-box",
  "configPath": "tests/dummy/config"
}
