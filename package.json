{
  "name": "@zestia/ember-select-box",
  "version": "15.3.1",
  "description": "A faux select box for Ember apps",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "npm-run-all lint test:ember",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "prettier": "prettier . --write",
    "release": "release-it",
    "deploy": "ember build --environment production && ember github-pages:commit --message \"Deploy gh-pages from commit $(git rev-parse HEAD)\" && git push origin gh-pages:gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zestia/ember-select-box.git"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "author": "Zestia",
  "license": "MIT",
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@ember/test-helpers": "^2.2.5",
    "@embroider/test-setup": "^0.39.1",
    "@zestia/eslint-config": "^4.0.3",
    "@zestia/prettier-config": "^1.0.4",
    "@zestia/stylelint-config": "^2.0.47",
    "@zestia/template-lint-config": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-auto-import": "^1.11.2",
    "ember-cli": "^3.26.1",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-github-pages": "^0.2.2",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sass": "^10.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.1",
    "ember-data": "^3.26.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-load-initializers": "^2.1.2",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^5.1.4",
    "ember-resolver": "^8.0.2",
    "ember-source": "^3.26.1",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^2.21.0",
    "ember-try": "^1.4.0",
    "eslint": "^7.24.0",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "qunit": "^2.15.0",
    "qunit-dom": "^1.6.0",
    "release-it": "^14.6.1",
    "sass": "^1.32.11",
    "stylelint": "^13.12.0"
  },
  "dependencies": {
    "@ember/render-modifiers": "^1.0.2",
    "@embroider/util": "^0.39.1",
    "@glimmer/component": "^1.0.4",
    "@glimmer/tracking": "^1.0.4",
    "ember-cli-babel": "^7.26.3",
    "ember-cli-htmlbars": "^5.7.1"
  },
  "keywords": [
    "ember-addon",
    "select",
    "select-box",
    "autocomplete",
    "dropdown",
    "menu"
  ],
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://zestia.github.io/ember-select-box",
    "versionCompatibility": {
      "ember": ">=3.8 <=canary"
    }
  },
  "bugs": {
    "url": "https://github.com/zestia/ember-select-box/issues"
  },
  "homepage": "https://github.com/zestia/ember-select-box",
  "configPath": "tests/dummy/config"
}
