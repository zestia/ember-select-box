{
  "name": "@zestia/ember-select-box",
  "version": "17.3.1",
  "description": "A faux select box for Ember apps",
  "keywords": [
    "ember-addon",
    "select",
    "select-box",
    "autocomplete",
    "dropdown",
    "menu"
  ],
  "repository": "",
  "license": "MIT",
  "author": "",
  "files": [
    "addon-main.cjs",
    "declarations",
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\" --prefixColors auto",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\" --prefixColors auto && npm run format",
    "lint:format": "prettier . --cache --check",
    "lint:hbs": "ember-template-lint . --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --cache",
    "lint:hbs:fix": "ember-template-lint . --fix --no-error-on-unmatched-pattern",
    "lint:js:fix": "eslint . --fix",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:css:fix": "concurrently \"npm:lint:css -- --fix\"",
    "start": "vite dev",
    "test": "vite build --mode=test --out-dir dist-tests && testem --file testem.cjs ci --port 0",
    "prepack": "rollup --config",
    "release": "release-it"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.9",
    "decorator-transforms": "^2.2.2",
    "ember-concurrency": "^4.0.2",
    "ember-modifier": "^4.2.0",
    "tracked-built-ins": "^3.3.0",
    "tracked-toolbox": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/runtime": "^7.25.6",
    "@ember/test-helpers": "^5.2.1",
    "@embroider/addon-dev": "^8.1.0",
    "@embroider/compat": "^4.1.0",
    "@embroider/core": "^4.1.0",
    "@embroider/macros": "^1.18.0",
    "@embroider/vite": "^1.1.5",
    "@eslint/js": "^9.17.0",
    "@glimmer/component": "^2.0.0",
    "@html-next/vertical-collection": "^4.0.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@zestia/ember-auto-focus": "^6.0.1",
    "@zestia/eslint-config": "^7.0.2",
    "@zestia/prettier-config": "^1.3.5",
    "@zestia/stylelint-config": "^6.1.1",
    "@zestia/template-lint-config": "^6.3.0",
    "babel-plugin-ember-template-compilation": "^2.2.5",
    "concurrently": "^9.0.1",
    "ember-qunit": "^9.0.2",
    "ember-resolver": "^13.1.0",
    "ember-route-template": "^1.0.3",
    "ember-source": "^6.3.0",
    "ember-template-lint": "^7.9.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-ember": "^12.3.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "globals": "^16.1.0",
    "prettier": "^3.4.2",
    "prettier-plugin-ember-template-tag": "^2.0.4",
    "qunit": "^2.24.1",
    "qunit-dom": "^3.4.0",
    "release-it": "^17.0.1",
    "rollup": "^4.22.5",
    "sass-embedded": "^1.89.2",
    "testem": "^3.15.1",
    "vite": "^6.2.4"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {
      "./components/dropdown/content.js": "./dist/_app_/components/dropdown/content.js",
      "./components/dropdown.js": "./dist/_app_/components/dropdown.js",
      "./components/dropdown/trigger.js": "./dist/_app_/components/dropdown/trigger.js",
      "./components/select-box/group.js": "./dist/_app_/components/select-box/group.js",
      "./components/select-box.js": "./dist/_app_/components/select-box.js",
      "./components/select-box/input.js": "./dist/_app_/components/select-box/input.js",
      "./components/select-box/option.js": "./dist/_app_/components/select-box/option.js",
      "./components/select-box/options.js": "./dist/_app_/components/select-box/options.js",
      "./modifiers/lifecycle.js": "./dist/_app_/modifiers/lifecycle.js"
    }
  },
  "imports": {
    "#app/*": "./demo/*",
    "#src/*": "./src/*"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js",
    "./addon-main.js": "./addon-main.cjs",
    "./components/dropdown": "./dist/components/dropdown/index.js",
    "./components/select-box": "./dist/components/select-box/index.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test"
      ]
    }
  }
}
