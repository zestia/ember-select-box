{
  "name": "@zestia/ember-select-box",
  "version": "15.0.0-beta.3",
  "description": "A faux select box for Ember apps",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "prettier": "prettier . --write",
    "start": "ember serve",
    "test": "npm-run-all lint:* test:ember",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "release": "release-it",
    "deploy": "ember build --environment production && ember github-pages:commit --message \"Deploy gh-pages from commit $(git rev-parse HEAD)\" && git push origin gh-pages:gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zestia/ember-select-box.git"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "author": "Zestia",
  "license": "MIT",
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@zestia/ember-template-lint-plugin": "^3.0.7",
    "@zestia/eslint-config": "^2.0.44",
    "@zestia/prettier-config": "^1.0.2",
    "@zestia/stylelint-config": "^2.0.42",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-auto-import": "^1.6.0",
    "ember-cli": "^3.20.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-github-pages": "^0.2.2",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sass": "^10.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-uglify": "^3.0.0",
    "ember-data": "^3.20.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-load-initializers": "^2.1.1",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^8.0.2",
    "ember-source": "3.22.0-beta.1",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^2.11.0",
    "ember-try": "^1.4.0",
    "eslint": "^7.7.0",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "qunit-dom": "^1.4.0",
    "release-it": "^13.7.0",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1"
  },
  "dependencies": {
    "@ember/render-modifiers": "^1.0.2",
    "@glimmer/component": "^1.0.1",
    "@glimmer/tracking": "^1.0.1",
    "ember-cli-babel": "^7.22.1",
    "ember-cli-htmlbars": "^5.3.1",
    "ember-merge-helper": "^0.1.1"
  },
  "keywords": [
    "ember-addon",
    "select",
    "select-box",
    "dropdown"
  ],
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://zestia.github.io/ember-select-box",
    "versionCompatibility": {
      "ember": ">=3.8 <=canary"
    }
  },
  "bugs": {
    "url": "https://github.com/zestia/ember-select-box/issues"
  },
  "homepage": "https://github.com/zestia/ember-select-box",
  "configPath": "tests/dummy/config"
}
